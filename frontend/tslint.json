{
  "extends": ["tslint-angular"],
  "rules": {
    "directive-selector": [true, "attribute", "path", "kebab-case"],
    "component-selector": [true, "element", "path", "kebab-case"],
    "use-host-property-decorator": false,
    "angular-whitespace": false,
    "no-output-rename": false,
    "no-input-rename": false,
    "max-classes-per-file": [true, 3],
    "no-use-before-declare": false,
    "no-empty-interface": false,
    "quotemark": [true, "double", "jsx-double"]
  }
}